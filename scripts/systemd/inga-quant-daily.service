[Unit]
Description=inga-quant daily pipeline
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=%i
WorkingDirectory=/srv/inga-quants
EnvironmentFile=-/srv/inga-quants/.env
ExecStart=/srv/inga-quants/scripts/run_daily.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=inga-quant
TimeoutStartSec=3600

[Install]
WantedBy=multi-user.target
